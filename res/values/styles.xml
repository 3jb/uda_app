<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="courseName" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
	<item name="android:paddingLeft">3dp</item>
	<item name="android:paddingTop">3dp</item>
	<item name="android:paddingBottom">10dp</item>
	<item name="android:textSize">15dp</item>
    </style>
    <style name="nuggetName" parent="@style/courseName">
	<item name="android:textSize">15dp</item>
	<item name="android:paddingLeft">5dp</item>
	<item name="android:paddingTop">8dp</item>
	<item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>
    <style name="pieceName" parent="@style/courseName">
	<item name="android:textColor">@color/uda_blue</item>
	<item name="android:layout_width">0dp</item>
	<item name="android:layout_weight">1</item>
	<item name="android:gravity">center</item>
    </style>
    <style name="nuggetNumber" parent="@style/courseName">
	<item name="android:textColor">@color/light_gray</item>
	<item name="android:background">@color/dark_gray</item>
	<item name="android:paddingRight">10dp</item>
	<item name="android:layout_height">match_parent</item>
	<item name="android:layout_width">55dp</item>
	<item name="android:textSize">30dp</item>
	<item name="android:gravity">center_vertical|right</item>
    </style>
    <style name="unitNumber" parent="@style/nuggetNumber">
	<item name="android:layout_height">wrap_content</item>
    </style>
    <style name="courseId" parent="@style/courseName">
        <item name="android:textColor">@color/medium_gray</item>
	<item name="android:layout_width">wrap_content</item>
	<item name="android:paddingRight">3dp</item>
	<item name="android:textSize">18dp</item>
    </style>
    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/light_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
	<item name="android:paddingLeft">10sp</item>
    </style>
    <style name="text_input" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
	<item name="android:paddingLeft">10sp</item>
	<item name="android:maxLines">1</item>
    </style>
    <style name="uda_button">
        <item name="android:background">@color/uda_blue</item>
	<item name="android:textColor">@color/white</item>
	<item name="android:textSize">15sp</item>
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">25sp</item>
	<item name="android:gravity">center_vertical|center_horizontal</item>
	<item name="android:layout_gravity">center_vertical|left</item>
    </style>
    <style name="nuggetPiecesLayout">
	<item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
	<item name="android:paddingLeft">10sp</item>
	<item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>
